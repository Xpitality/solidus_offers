<%= render :partial => 'spree/admin/offers/offer_tabs', :locals => { :current => 'Images' } %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @offer_image } %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_images_list), admin_offer_images_url(@offer), :icon => 'arrow-left' %></li>
<% end %>

<%= form_for [:admin, @offer, @offer_image], url: admin_offer_image_path(@offer, @offer_image), :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_image">
    <legend align="center"><%= @offer_image.attachment_file_name%></legend>
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label Spree.t(:thumbnail) %><br>
      <%= link_to image_tag(@offer_image.attachment.url(:small)), @offer_image.attachment.url(:offer) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'refresh' %>
      <%= link_to Spree.t('actions.cancel'), admin_offer_images_url(@offer), :id => 'cancel_link', :class => 'button remove' %>
    </div>
  </fieldset>
<% end %>
