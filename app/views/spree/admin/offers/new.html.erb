<% content_for :page_title do %>
  <%= Spree.t(:new_offer) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_offers_list), spree.admin_offers_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_offer_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @offer } %>
</div>

<div data-hook="admin_offer_new_form">
  <% @offer.country = Spree::Country.default %>
  <%= form_for [:admin, @offer], url: admin_offers_url, method: :post do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div data-hook="admin_offer_new_form_buttons">
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
